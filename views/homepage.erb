  <h2> Listings: </h2>
  <% flash.keys.each do |type| %>
        <div data-alert class="flash <%= type %> alert-box radius">
            <%= flash[type] %>
            <a href="/homepage" class="close">&times;</a>
        </div>
  <% end %>
  <form action="/session/destroy" method='post'>
    <input type="submit" value='Logout'>
  </form>
  <form action="/property/new" method="get">
    <button type="submit"> List a property </button>
  </form>

  <% @properties.each do |property| %>
    <%= property.title%>
    <%= "Property area: #{property.postcode} Property details #{property.description} "%>
    <br>
    <form action="/property/<%= property.id %>" method="get">
      <button type="submit"> View Property </button>
    </form>
  <% end %>
  <% if @messages %>
    <% @messages.each do |message| %>
      <%= "Someone has requested #{@property.title} "%>
      <form action="/property/<%= property.id %>/confirm" method="post">
      <button type="submit"> Rent Property </button>
    </form>
    <% end%>
  <% end%>

